CREATE TABLE list (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL DEFAULT ""
);

selectAll:
SELECT *
FROM list;

selectById:
SELECT *
FROM list
WHERE id = :id
LIMIT 1;

insert:
INSERT INTO list(title)
VALUES (:title);

