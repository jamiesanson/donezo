CREATE TABLE todo (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    listId INTEGER NOT NULL REFERENCES list(id),
    isDone INTEGER AS Boolean NOT NULL DEFAULT 0,
    text TEXT NOT NULL DEFAULT ""
);

select:
SELECT *
FROM todo
WHERE id = :id;

selectAll:
SELECT *
FROM todo;

insert:
INSERT INTO todo(listId, text)
VALUES (:listId, :text);

update:
UPDATE todo
SET isDone = :isDone, text = :text
WHERE id = :id;

delete:
DELETE FROM todo
WHERE id = :id;